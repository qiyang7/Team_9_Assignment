<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background= "#7F8E7F"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/buttonBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/backbutton" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Forgot Password"
            android:textSize="25dp"
            android:textColor="#FFFFFF">

        </TextView>
    </RelativeLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="60dp"
    android:text="Please enter your email to retrieve password."
    android:textSize="20dp"
    android:textAlignment="center"
    android:textColor="#FFFFFF">

</TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="#D9D9D9"
        app:cardCornerRadius="16dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editForgotPassEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:hint="E-mail"
                android:textSize="16dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnForgotPassword"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_background"
        android:elevation="500dp"
        android:hint="Send Email"
        android:textSize="20dp"
        android:textColor="#494949">


    </androidx.appcompat.widget.AppCompatButton>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="1.5dp"
        android:background="#FFFFFF" />
    <TextView
        android:id="@+id/registerFromForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Dont have an account? Register"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        />

</LinearLayout>

