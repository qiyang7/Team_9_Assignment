<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Application"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Application.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register"
            android:theme="@style/Theme.Application.NoActionBar"/>

    <activity android:name=".NewHompage"/>
        <activity android:name=".ReadingCorner"
            android:label="Reading Corner"/>
        <activity android:name=".readingFile"
            android:label="Reading File"
            android:theme="@style/Theme.Application.NoActionBar"/>
        <activity android:name=".Certificate"/>
        <activity android:name=".ViewProfile"/>
        <activity android:name=".EditProfile"/>
        <activity android:name=".TestActivity"/>
        <activity android:name=".Quiz"/>
        <activity android:name=".QuizResults"/>
        <activity android:name=".ForgotPassword"/>
        <activity android:name=".ReportActivity"/>
    </application>

</manifest>